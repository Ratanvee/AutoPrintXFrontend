{
    "version": 2,
    "name": "AutoPrintX",
    // This section defines the build process
    "builds": [
        {
            "src": "package.json",
            "use": "@vercel/static-build",
            "config": {
                "installCommand": "npm install",
                "buildCommand": "npm run build"
            }
        }
    ],
    // Custom headers remain the same for security/performance
    "headers": [
        {
            "source": "/(.*)",
            "headers": [
                {
                    "key": "Strict-Transport-Security",
                    "value": "max-age=63072000; includeSubDomains; preload"
                },
                {
                    "key": "X-Content-Type-Options",
                    "value": "nosniff"
                }
            ]
        }
    ],
    // === CRITICAL FIX: Rewrite Rules for SPA Routing ===
    // This tells Vercel that for any path ("/(.*)") that doesn't correspond
    // to a static file, rewrite the destination to the single entry point ("index.html").
    // This allows the React Router to take over and render the correct component.
    "rewrites": [
        {
            "source": "/(.*)",
            "destination": "/index.html"
        }
    ]
}